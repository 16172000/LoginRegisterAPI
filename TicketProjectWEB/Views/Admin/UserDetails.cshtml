                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@

					<a asp-action="Edit" asp-route-id="@item.Id"><img src="~/uploadfile/Edit_Logo.png" style="width:30px; height:30px"/></a> 
                    <a asp-action="Details" asp-route-id="@item.Id"><img src="~/uploadfile/View_Logo.jpg" style="width:30px; height:30px" /></a> 
                    <a asp-action="Delete" asp-route-id="@item.Id"><img src="~/uploadfile/Delete_Logo.png" style="width:30px; height:30px" /></a>
            </td>
        </tr>
        }
    </tbody>
</table>

<div class="form-group">
    <a asp-action="Index"><img src="~/uploadfile/backtolist_logo.png" style="width:30px; height:30px" /></a>

</div>


<script>
    $(document).ready(function () {
        $('#MyTable').dataTable({
            lengthMenu: [
                [15, 25, 50, -1],
                [15, 25, 50, 'All']
            ]
        });

    });
</script>


